{
    "properties": {
        "displayName": "Web Application should only be accessible over HTTPS [Custom]vnnsss",
        "policyType": "Custom",
        "mode": "All",
        "description": "Use of HTTPS ensures server/service authentication and protects data in transit from network layer eavesdropping attacks.",
        "metadata": {
            "category": "Security Center",
            "createdBy": "a1382ee0-8aa7-4155-8092-17e3603acf07",
            "createdOn": "2020-07-09T12:31:06.4952218Z",
            "updatedBy": null,
            "updatedOn": null,
            "dummy": "stuff"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "Audit",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Web/sites"
                    },
                    {
                        "field": "kind",
                        "like": "app*"
                    },
                    {
                        "field": "Microsoft.Web/sites/httpsOnly",
                        "equals": "false"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    },
    "id": "/subscriptions/c00d16c7-6c1f-4c03-9be1-6934a4c49682/providers/Microsoft.Authorization/policyDefinitions/e4ed8da0-be44-47ba-b654-78994a69a369",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "e4ed8da0-be44-47ba-b654-78994a69a369"
}
